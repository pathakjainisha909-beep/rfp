{
    "scraping": {
        "sources": [
            {
                "name": "CanaraBank",
                "output_folder": "data/raw_pdfs/canara",
                "playwright_code": "page.goto(\"https://www.canarabank.bank.in/\")\npage.get_by_role(\"button\", name=\"Select English language\").click()\npage.get_by_role(\"button\", name=\"Close\", exact=True).click()\npage.get_by_role(\"searchbox\", name=\"Search for content\").click()\npage.get_by_role(\"searchbox\", name=\"Search for content\").fill(\"Ten\")\npage.get_by_role(\"link\", name=\"Tenders\", exact=True).click()",
                "pagination": {
                    "enabled": true,
                    "max_pages": 14,
                    "extract_only_page": 14,
                    "next_button_selector": "a[aria-label='Next']"
                },
                "file_selector": "a[href$='.pdf']"
            }
        ],
        "browser_settings": {
            "headless": false,
            "timeout": 60000
        },
        "download_settings": {
            "chunk_size": 8192,
            "retry_attempts": 10
        }
    },
